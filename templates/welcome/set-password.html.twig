{% extends 'base.html.twig' %}

{% set bodyClass = 'set-password__page' %}

{% block body %}

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Welcome to NullTraining</h2>
                    <h3 class="section-subheading text-muted">Set your password.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-8 offset-md-2">
                    {{ form_start(form) }}
                    {{ form_row(form.password) }}
                    {#{{ form_row(form.password_repeat) }}#}
                    {{ form_row(form.confirm) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
