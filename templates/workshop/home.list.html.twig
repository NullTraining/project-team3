{% extends 'base.html.twig' %}


{% block body %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <p>Hello {{ app.user.username }}</p>
    {% endif %}
    {% if workshops is empty %}
        <div>
            Currently, there are no active workshops.
        </div>
    {% else %}
        <ul>
            {% for workshop in workshops %}
                <li data-id="{{ workshop.id }}">
                    {{ workshop.title }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
