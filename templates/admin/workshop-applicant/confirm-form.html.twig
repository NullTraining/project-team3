<div class="row">
    <div class="col-lg-12 text-center">
        <h3> Are you sure you want to approve this user and send him invitation?</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-center">
        {{ form_start(form) }}
        {{ form_row(form.confirm_invite) }}
        <div id="form-actions-row">
            {{ form_widget(form.ok, {
                'label' : 'Yes, invite him',
            }) }}
            <a href="{{ path('easyadmin', { action: 'list', entity: 'WorkshopApplicant' }) }}" class="btn btn-secondary action-list">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
